    <!-- session-timeout is in minute -->
	<session-config>
		<session-timeout>10</session-timeout>
	</session-config>
	
    <!-- Welcome file lists -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
